<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="organotiki.mobile.mobilestreet.SearchCustomerFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="917dp"
            android:layout_height="440dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/securityPapers"
                android:textColor="@color/colorAccent"
                android:textSize="25sp"
                android:layout_toStartOf="@+id/button_add_promissory_note"/>

            <Button
                android:id="@+id/button_add_promissory_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/button_add_check"
                android:text="@string/addPromissoryNote"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/button_add_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/button_back"
                android:text="@string/addCheck"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/button_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/linearLayout_header"
                android:text="@string/ok"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/linearLayout_header"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/textView_title"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/column_header1"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/bank"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#000" />

                <TextView
                    android:id="@+id/column_header2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/expiration"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#000" />

                <TextView
                    android:id="@+id/column_header3"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/number"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#000" />

                <TextView
                    android:id="@+id/column_header4"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/value"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="#000" />

                <TextView
                    android:id="@+id/column_header5"
                    android:layout_width="47dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/delete"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>

            <ListView
                android:id="@+id/listView_checks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayout_header"
                android:descendantFocusability="beforeDescendants"/>
        </RelativeLayout>
    </RelativeLayout>
</HorizontalScrollView>