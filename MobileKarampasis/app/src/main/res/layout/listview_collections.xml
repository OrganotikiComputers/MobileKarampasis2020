<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Spinner
        android:id="@+id/spinner_bank"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="start"
        android:hint="@string/bank"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/colorAccent" />

    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/editText_expiration_date"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="start"
        android:hint="@string/expiration"
        android:inputType="none"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <EditText
        android:id="@+id/editText_number"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="start"
        android:hint="@string/number"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:inputType="number|text"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <EditText
        android:id="@+id/editText_value"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:gravity="end"
        android:hint="@string/value"
        android:maxLines="1"
        android:textColor="@color/colorAccent"
        android:inputType="number|numberDecimal"
        android:selectAllOnFocus="true"/>

    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/imageButton_delete"
        android:theme="@style/RedImageButton"
        android:contentDescription="@string/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_highlight_off_white_24dp"
        />
</LinearLayout>