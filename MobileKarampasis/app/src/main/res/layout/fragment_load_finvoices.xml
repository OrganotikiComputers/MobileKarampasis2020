<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="850dp"
                android:layout_height="550dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_Title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge" />


                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView_date"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/date"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />


                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />


                    <TextView
                        android:id="@+id/textView_cusName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/colorPrimary"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/customer"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />


                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />


                    <TextView
                        android:id="@+id/textView_total"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/total"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />


                    <TextView
                        android:id="@+id/textView_open"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/open"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/textView_delete"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/delete"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent" />

                </LinearLayout>

                <ListView
                    android:id="@+id/listView_load_invoices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:id="@+id/linearLayout_subtotals_titles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/linearLayout_subtotals">

                    <TextView
                        android:id="@+id/textView_subtotal_AEY_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:text="@string/karampasisAEY"
                        android:textSize="25sp"
                        />

                    <TextView
                        android:id="@+id/textView_subtotal_ASY_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:text="@string/karampasisASY"
                        />

                    <TextView
                        android:id="@+id/textView_subtotal_FEY_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:text="@string/karampasisFEY"
                        />

                    <TextView
                        android:id="@+id/textView_subtotal_FSY_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        android:text="@string/karampasisFSY"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_subtotals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/textView_generalNotes">

                    <TextView
                        android:id="@+id/textView_subtotal_AEY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        />

                    <TextView
                        android:id="@+id/textView_subtotal_ASY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        />

                    <TextView
                        android:id="@+id/textView_subtotal_FEY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        />

                    <TextView
                        android:id="@+id/textView_subtotal_FSY"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="viewEnd"
                        android:layout_weight="1"
                        android:textSize="25sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/expenses"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <View
                    android:layout_width="300dp"
                    android:layout_height="5dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:labelFor="@+id/editText_hotel"
                        android:maxLines="1"
                        android:text="@string/hotel_"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/editText_hotel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:labelFor="@+id/editText_meals"
                        android:maxLines="1"
                        android:text="@string/meals_"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/editText_meals"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:labelFor="@+id/editText_fuel"
                        android:maxLines="1"
                        android:text="@string/fuel_"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/editText_fuel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:labelFor="@+id/editText_misc"
                        android:maxLines="1"
                        android:text="@string/misc_"
                        android:textSize="22sp" />

                    <EditText
                        android:id="@+id/editText_misc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="22sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="5dp"
                    android:background="@color/colorPrimary" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/total_"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/textView_expenses_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxLines="1"
                        android:textColor="@color/colorAccent"
                        android:textSize="22sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_deposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/cashTotal_"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/textView_securities_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/securitiesTotal_"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@color/colorGreen" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:shadowColor="@color/colorAccent"
                android:text="@string/memoColorCompleted"
                android:textSize="22sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/close"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</HorizontalScrollView>