<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="organotiki.mobile.mobilestreet.MainScreen"
    >

    <include
        android:id="@+id/mainScreenBar"
        layout="@layout/main_screen_bar"
        android:baselineAligned="false" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mainScreenBar"
        android:baselineAligned="false"
        android:columnOrderPreserved="true"
        android:columnCount="3"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="organotiki.mobile.mobilestore.MainScreen">

        <Button
            android:id="@+id/button_newOrder"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/button_returns"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_add_shopping_cart_black_48dp"
            android:padding="10dp"
            android:text="@string/newOrder"
            android:textColor="@color/colorPrimaryDark" />
        <Button


            android:id="@+id/button_returns"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_assignment_return_black_48dp"
            android:padding="10dp"
            android:text="@string/returns"
            android:textColor="@color/colorPrimaryDark" />

        <Button

            android:id="@+id/button_loadOrder"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_toEndOf="@+id/button_returns"
            android:layout_margin="10dp"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_event_note_black_48dp"
            android:padding="10dp"
            android:text="@string/loadReturns"
            android:textColor="@color/colorPrimaryDark" />

        <Button

            android:id="@+id/button_customer_report"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_toStartOf="@+id/button_online_reports"
            android:layout_below="@+id/button_newOrder"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_person_pin_circle_black_48dp"
            android:padding="10dp"
            android:text="@string/customerReport"
            android:textColor="@color/colorPrimaryDark" />

        <Button

            android:id="@+id/button_online_reports"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/button_newOrder"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_text_fields_black_48dp"
            android:padding="10dp"
            android:text="@string/onlineReports"
            android:textColor="@color/colorPrimaryDark" />



        <Button

            android:id="@+id/button_collections"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/button_newOrder"
            android:layout_toEndOf="@+id/button_online_reports"
            android:layout_margin="10dp"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_euro_symbol_black_48dp"
            android:padding="10dp"
            android:text="@string/collections"
            android:textColor="@color/colorPrimaryDark" />

        <Button

            android:id="@+id/button_loadCollections"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/button_customer_report"
            android:layout_toStartOf="@+id/button_returns"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_event_note_black_48dp"
            android:padding="10dp"
            android:text="@string/loadCollections"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button_currency_calculator"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/button_collections"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_cash_100_black_48dp"
            android:padding="10dp"
            android:text="@string/currencyCalculator"
            android:textColor="@color/colorPrimaryDark" />

        <Button

            android:id="@+id/button_customer_browser"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/button_collections"
            android:layout_toEndOf="@+id/button_currency_calculator"
            android:layout_margin="10dp"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_people_black_48dp"
            android:padding="10dp"
            android:text="@string/customerBrowser"
            android:textColor="@color/colorPrimaryDark" />

        <Button

            android:id="@+id/button_bookmarks"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/button_currency_calculator"
            android:layout_toStartOf="@+id/button_returns"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_bookmark_black_48dp"
            android:padding="10dp"
            android:text="@string/bookmarks"
            android:textColor="@color/colorPrimaryDark" />

        <Button

            android:id="@+id/button_sync"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_below="@+id/button_currency_calculator"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:background="@drawable/round_corners"
            android:baselineAligned="false"
            android:drawableTop="@drawable/ic_sync_black_48dp"
            android:padding="10dp"
            android:text="@string/sync"
            android:textColor="@color/colorPrimaryDark" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:baselineAligned="false">


        <LinearLayout
            android:id="@+id/linearLayout_customer_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="start"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="19" />


            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView_customer_logo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/colorPrimary"
                android:src="@drawable/karabassis_logo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_user_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="50dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/user_"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/company_"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/textView_company_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/companySite_"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/version_"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="end"
            android:orientation="vertical">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="19" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView_logo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/logoo" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
